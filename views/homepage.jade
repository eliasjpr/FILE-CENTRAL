doctype html
html(lang="en")
	head
		title= "Imtech uploader"
		meta(HTTP-EQUIV="Pragma" CONTENT="no-cache")
		link(href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;subset=latin,latin-ext" rel="stylesheet")
		link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")
		link(rel="stylesheet" type="text/css" href="/styles/style.css")
		script(src="https://code.jquery.com/jquery-2.1.3.min.js")
		script(src="/js/dependencies/sails.io.js")
	
	body
		form(class="sign-up" method="post" action="/uploader/verify")
			h1.sign-up-title
				i.fa.fa-cloud-upload
				span  ImlinkUp 
			h2 
				i.fa.fa-lock 
				span &nbsp;Verify Email
			
			if msg
				div.alert-box.error 
					i.fa.fa-exclamation-triangle  
					span  #{msg}
			
			
			p Please enter email address where to send verification code:
			
			br 
			
			input(type="text" name="email" class="sign-up-input" placeholder="Email address" required="required")
										
			button(type="submit" class="sign-up-button")
				span  VERIFY  
				i.fa.fa-mail-forward 	
doctype html
html(lang="en")
	head
		title= "Imtech uploader"
		meta(HTTP-EQUIV="Pragma" CONTENT="no-cache")
		link(href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;subset=latin,latin-ext" rel="stylesheet")
		link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")
		link(rel="stylesheet" type="text/css" href="/styles/style.css")
		script(src="https://code.jquery.com/jquery-2.1.3.min.js")
		script(src="/js/dependencies/sails.io.js")

	body

form(class="sign-up" method="post" action="/bucket/upload" enctype="multipart/form-data" )
			input(type="hidden" name="sessionUUID" value="#{sessionUUID}")

			h1.sign-up-title
				i.fa.fa-cloud-upload
span  ImlinkUp
h2
  i.fa.fa-share-alt
				span &nbsp;Send files to Imtech
			br
			div#send-to-imlink
				input(type="text" name="code" class="sign-up-input" placeholder="Enter Code" required="required" style="font-size: 24px;" value="#{code}")
				input(type="text" name="name" class="sign-up-input" placeholder="Enter Your full name" required="required")
				input(type="text" name="company" class="sign-up-input" placeholder="Enter Your Company" required="required")
				input(type="text" name="job" class="sign-up-input" placeholder="Job #" required="required")
				textarea(name="comments" class="sign-up-input" placeholder="Comments" style="width:89%")


div#upload-progress
  h3 Upload Stats

  div.meter.red
					span#progress-bar

				span#fileName
  span#percent
  span#totalSize
  span#totalUploaded
				span#duration
				span#kbspeed
				span#mbspeed


span.file-wrapper
				input(type="file" id="files" name="files" multiple="multiple"  required="required" )
				span.file-button Select files
			br
			br


button(type="submit" class="sign-up-button")
  span  SEND
  i.fa.fa-mail-forward
		script.
			var sessionUUID = "#{sessionUUID}";
		script(src="/js/uploader.js")




